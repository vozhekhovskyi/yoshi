{
  "name": "yoshi-monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix/yoshi.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": ":",
    "bumpDocs": "npm run version --prefix './website' --",
    "createVersion": "node scripts/createVersion",
    "create-yoshi-app:dev": "npm run dev --prefix ./packages/create-yoshi-app",
    "customPublish": "lerna exec 'node ../../scripts/customPublish.js'",
    "changelog": "lerna-changelog",
    "postinstall": "npm run bootstrap",
    "test": ":",
    "lint": "eslint . --max-warnings 0",
    "test:unit": "npx jest --config='./jest.unit.config.js'",
    "test:app-flow": "node scripts/runKitchensink.js",
    "test:integration": "npm test --prefix ./packages/yoshi",
    "test:client": "npm run client --prefix ./packages/create-yoshi-app",
    "test:fullstack": "npm run fullstack --prefix ./packages/create-yoshi-app",
    "test:server": "npm run server --prefix ./packages/create-yoshi-app",
    "test:bizmgr": "npm run bizmgr --prefix ./packages/create-yoshi-app",
    "test:library": "npm run library --prefix ./packages/create-yoshi-app",
    "test:ooi": "npm run ooi --prefix ./packages/create-yoshi-app",
    "website:dev": "npm start --prefix './website'",
    "test-babel-plugin-transform-hmr-runtime": "npm test --prefix ./packages/babel-plugin-transform-hmr-runtime"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "async-retry": "^1.2.3",
    "babel-eslint": "^10.0.0",
    "chai": "^4.1.2",
    "chalk": "^2.4.1",
    "cross-spawn": "^6.0.5",
    "eslint": "^5.8.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^22.0.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-hooks": "^1.6.0",
    "eslint-plugin-wix-style-react": "^1.0.2",
    "execa": "^1.0.0",
    "expect": "^23.3.0",
    "express": "^4.16.3",
    "fs-extra": "^7.0.0",
    "github-api": "^3.2.0",
    "glob": "^7.1.3",
    "globby": "^9.0.0",
    "husky": "^1.0.0-rc.9",
    "jest": "^24.1.0",
    "jest-environment-puppeteer": "^3.4.0",
    "jest-puppeteer": "^3.4.0",
    "jest-teamcity-reporter": "^0.9.0",
    "jsonwebtoken": "^8.5.1",
    "lerna": "^2.11.0",
    "lerna-changelog": "^0.8.0",
    "lint-staged": "^7.2.0",
    "lodash": "^4.17.10",
    "minimist": "^1.2.0",
    "mocha": "^5.2.0",
    "mocha-env-reporter": "^3.0.0",
    "mocha-teamcity-reporter": "^2.4.0",
    "prettier": "^1.12.1",
    "promisify": "0.0.3",
    "prompts": "^0.1.8",
    "puppeteer": "^1.13.0",
    "react": "^16.8.6",
    "retry-promise": "^1.0.0",
    "rimraf": "^2.6.2",
    "semver": "^5.5.0",
    "serve": "^10.0.2",
    "shelljs": "^0.8.2",
    "strip-ansi": "^4.0.0",
    "tempy": "^0.2.1",
    "terminate": "^2.1.0",
    "tslint": "^5.16.0",
    "tslint-plugin-wix-style-react": "^1.0.6",
    "tslint-react-hooks": "^2.1.0",
    "typescript": "^3.0.0",
    "verdaccio": "^3.8.3",
    "wait-port": "^0.2.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
